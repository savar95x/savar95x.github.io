r: brightness(120%);&#xA;}&#xA;&#xA;#searchInput:focus:placeholder-shown + .tab {&#xA;&#x9;display: flex;&#xA;}&#xA;.tab {&#xA;&#x9;padding: 1rem 1.5rem 1rem 1rem;&#xA;&#x9;align-items: center;&#xA;  display: none;&#xA;  border-radius: 50px;&#xA;}&#xA;#toggleButton {&#xA;&#x9;padding: 0.8rem;&#xA;}&#xA;#search-bar {&#xA;&#x9;width: 100%;&#xA;&#x9;display: flex;&#xA;  border: 1px solid var(--clr-bg2);&#xA;&#x9;background: var(--clr-bg2);&#xA;  border-radius: 5px;&#xA;  /*&#xA;  border-radius: 50px;&#xA;  */&#xA;}&#xA;#search-bar:hover:not(:has(:focus)) {&#xA;  border-color: var(--clr-bg5) !important;&#xA;}&#xA;#search-bar:has(input:focus) {&#xA;  #search-icon {&#xA;    color: var(--clr-accent) !important;&#xA;  }&#xA;  border-color: var(--clr-accent);&#xA;}&#xA;&#xA;.ph, .ph-bold, .ph-fill {&#xA;&#x9;display: flex;&#xA;&#x9;position: relative;&#xA;&#x9;padding: 1.25rem;&#xA;  font-size: 1.25rem !important;&#xA;&#x9;top: 0px;&#xA;  color: var(--clr-gray);&#xA;&#x9;align-items: center;     /* vertical centering */&#xA;}&#xA;.right {&#xA;&#x9;font-size: 1.2rem;&#xA;&#x9;display: inline;&#xA;&#x9;position: relative;&#xA;&#x9;padding: 0 0 0 0.1rem;&#xA;&#x9;top: 3px;&#xA;&#x9;align-items: center;     /* vertical centering */&#xA;}&#xA;input {&#xA;&#x9;font-family: var(--font-family);&#xA;  margin: 1.25rem 0;&#xA;&#x9;width: 100%;&#xA;  background: inherit;&#xA;&#x9;font-size: 1rem;&#xA;&#x9;color: var(--clr-fg);&#xA;}&#xA;input::placeholder {&#xA;&#x9;color: var(--clr-bg5);&#xA;}&#xA;#name {&#xA;&#x9;font-weight: bold;&#xA;}&#xA;&#xA;#cards {&#xA;&#x9;display: grid;&#xA;&#x9;gap: 10px;&#xA;&#x9;grid-template-columns: repeat(6, 1fr);&#xA;}&#xA;&#xA;#cards a, #cards span {&#xA;&#x9;background: var(--clr-bg2);&#xA;&#x9;color: var(--clr-gray);&#xA;&#x9;text-align: center;&#xA;&#x9;padding: 2rem;&#xA;&#x9;font-size: clamp(1.25rem, 5vw, 1.5rem) ;&#xA;  border-radius: 5px;&#xA;}&#xA;&#xA;#cards a:hover, #cards span:hover {&#xA;&#x9;background: var(--clr-accent-bg);&#xA;  color: 